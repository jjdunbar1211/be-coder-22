<form action='/api/products/guardar' method='post'>
	<h2 class='text-center mb-4 text'>Ingrese producto</h2>
	<div class='form-floating mb-3'>
		<input
			type='text'
			class='form-control'
			id='title'
			name='title'
			placeholder='title'
		/>
		<label for='title'>Titulo del producto</label>
	</div>
	<div class='form-floating mb-3'>
		<input
			type='number'
			class='form-control'
			id='price'
			name='price'
			placeholder='price'
		/>
		<label for='price'>Precio</label>
	</div>
	<div class='form-floating mb-3'>
		<input
			type='text'
			class='form-control'
			id='image'
			name='image'
			placeholder='price'
		/>
		<label for='image'>URL de la imagen</label>
	</div>
	<button class='btn btn-dark' type='submit'>
		Ingresar producto
	</button>

	<a href='/api/products' class='btn btn-dark'>Volver al inicio</a>
</form>